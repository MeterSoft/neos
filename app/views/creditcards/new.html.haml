= simple_form_for resource, html: { class: "" } do |f|
  = f.input :email, input_html: { class: "form-control" }
  = f.input :first_name, input_html: { class: "form-control" }
  = f.input :last_name, input_html: { class: "form-control" }
  = f.input :number, input_html: { class: "form-control" }
  = f.input :csv, input_html: { class: "form-control" }
  = f.input :month, collection: Date::ABBR_MONTHNAMES.compact.map {|m| Date::ABBR_MONTHNAMES.index(m)},include_blank: false, input_html: { id: 'month', class: "form-control" }
  = f.input :year, collection: (Time.now.year..Time.now.year + 10),include_blank: false,input_html: { id: 'year', class: "form-control" }
  = f.input :address, input_html: { class: "form-control" }
  = f.submit "Next", class: "btn btn-primary"